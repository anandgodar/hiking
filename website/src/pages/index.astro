<script>
  // State filter functionality
  const filterInput = document.getElementById('state-filter');
  const statesGrid = document.getElementById('states-grid');
  const stateCards = document.querySelectorAll('.state-card');
  const stateCount = document.getElementById('state-count');
  const noResults = document.getElementById('no-results');
  const clearBtn = document.getElementById('clear-filter');
  const resetBtn = document.getElementById('reset-search');
  const totalStates = stateCards.length;

  function filterStates(query) {
    const searchQuery = query.toLowerCase().trim();
    let visibleCount = 0;

    stateCards.forEach(card => {
      const stateName = card.dataset.stateName || '';
      const stateSlug = card.dataset.stateSlug || '';
      const matches = !searchQuery ||
                      stateName.includes(searchQuery) ||
                      stateSlug.includes(searchQuery);

      if (matches) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Update count text
    if (stateCount) {
      stateCount.textContent = searchQuery
        ? `${visibleCount} of ${totalStates} regions`
        : `${totalStates} regions available`;
    }

    // Show/hide no results message
    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }

    // Show/hide clear button
    if (clearBtn) {
      clearBtn.style.display = searchQuery ? 'flex' : 'none';
    }

    // Show/hide grid
    if (statesGrid) {
      statesGrid.style.display = visibleCount === 0 ? 'none' : 'grid';
    }
  }

  function clearFilter() {
    if (filterInput) {
      filterInput.value = '';
      filterStates('');
      filterInput.focus();
    }
  }

  // Event listeners
  filterInput?.addEventListener('input', (e) => {
    filterStates(e.target.value);
  });

  clearBtn?.addEventListener('click', clearFilter);
  resetBtn?.addEventListener('click', clearFilter);

  // Handle Enter key - navigate to first visible state
  filterInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      const firstVisible = document.querySelector('.state-card[style="display: block;"], .state-card:not([style*="display: none"])');
      if (firstVisible) {
        window.location.href = firstVisible.href;
      }
    }
  });
</script>