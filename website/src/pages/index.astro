---
/**
 * Homepage - Main Site Index
 * Location: src/pages/index.astro
 *
 * FIXED: All URLs now include /hikes/ path segment
 * FIXED: All emojis replaced with SVG icons
 * FIXED: State search filter now functional
 */
import Layout from '../layouts/Layout.astro';
import SiteFooter from '../components/SiteFooter.astro';
import MountainCard from '../components/MountainCard.astro';
import GlobalSearch from '../components/GlobalSearch.astro';
import HomepageFAQ from '../components/HomepageFAQ.astro';

// Load all mountains
const allFiles = import.meta.glob('../data/*/*.json', { eager: true });
const allMountains = Object.values(allFiles).map(f => f.default || f);

// Normalize state slug
const normalizeState = (s) => {
  if (s === 'nh') return 'new-hampshire';
  if (s === 'me') return 'maine';
  if (s === 'vt') return 'vermont';
  if (s === 'ny') return 'new-york';
  return s;
};

// Search Index - FIXED: Added /hikes/ to URL
const searchIndex = allMountains.map(m => ({
  title: m.name,
  type: 'Mountain',
  subtitle: m.state || m.state_slug,
  url: `/${normalizeState(m.state_slug)}/hikes/${m.slug}`,
  image: m.mountain_hero || m.image,
  tags: m.tags || []
}));

// Group by state
const stateGroups = {};
allMountains.forEach(m => {
  const state = normalizeState(m.state_slug);
  if (!stateGroups[state]) stateGroups[state] = [];
  stateGroups[state].push(m);
});

// Featured categories - NO EMOJIS
const categories = [
  { id: '4000-footer', title: '4000 Footers', icon: 'mountain' },
  { id: 'waterfall', title: 'Waterfalls', icon: 'water' },
  { id: 'view', title: 'With a View', icon: 'eye' },
  { id: 'dog-friendly', title: 'Dog Friendly', icon: 'paw' },
  { id: 'fire-tower', title: 'Fire Towers', icon: 'tower' },
];

// State cards
const states = [
  { slug: 'new-hampshire', name: 'New Hampshire', image: 'https://images.unsplash.com/photo-1589656966895-2f33e7653819?auto=format&fit=crop&q=80&w=800', count: stateGroups['new-hampshire']?.length || 0 },
  { slug: 'maine', name: 'Maine', image: 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800', count: stateGroups['maine']?.length || 0 },
  { slug: 'vermont', name: 'Vermont', image: 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800', count: stateGroups['vermont']?.length || 0 },
  { slug: 'new-york', name: 'New York', image: 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800', count: stateGroups['new-york']?.length || 0 },
];

// Top rated mountains
const topMountains = allMountains
  .sort((a, b) => (b.elevation || 0) - (a.elevation || 0))
  .slice(0, 4);

// Icon SVG helper
const getIconSvg = (iconName) => {
  const icons = {
    mountain: '<path d="M14 6l-3.75 5 2.85 3.8-1.6 1.2C9.81 13.75 7 10 7 10l-6 8h22L14 6z"/>',
    water: '<path d="M12 2c-5.33 4.55-8 8.48-8 11.8 0 4.98 3.8 8.2 8 8.2s8-3.22 8-8.2c0-3.32-2.67-7.25-8-11.8z"/>',
    eye: '<path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>',
    paw: '<path d="M4.5 12c-.83 0-1.5-.67-1.5-1.5S3.67 9 4.5 9 6 9.67 6 10.5 5.33 12 4.5 12zm3-4C6.67 8 6 7.33 6 6.5S6.67 5 7.5 5 9 5.67 9 6.5 8.33 8 7.5 8zm5-1c-.83 0-1.5-.67-1.5-1.5S11.67 4 12.5 4s1.5.67 1.5 1.5S13.33 7 12.5 7zm4 1c-.83 0-1.5-.67-1.5-1.5S15.67 5 16.5 5s1.5.67 1.5 1.5S17.33 8 16.5 8zm3 4c-.83 0-1.5-.67-1.5-1.5S18.67 9 19.5 9s1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>',
    tower: '<path d="M12 2L4 5v6.09c0 5.05 3.41 9.76 8 10.91 4.59-1.15 8-5.86 8-10.91V5l-8-3zm6 9.09c0 4-2.55 7.7-6 8.83-3.45-1.13-6-4.82-6-8.83V6.31l6-2.25 6 2.25v4.78z"/>',
    location: '<path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>',
    compass: '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5.5-2.5l7.51-3.49L17.5 6.5 9.99 9.99 6.5 17.5zm5.5-6.6c.61 0 1.1.49 1.1 1.1s-.49 1.1-1.1 1.1-1.1-.49-1.1-1.1.49-1.1 1.1-1.1z"/>'
  };
  return icons[iconName] || icons.mountain;
};

// States with trails for filter
const activeStates = states.filter(s => s.count > 0);
---

