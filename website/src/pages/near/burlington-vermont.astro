/**
 * Best Hiking Trails Near Burlington, Vermont
 * SEO landing page targeting "hiking near burlington vt" (880 searches/month)
 */
import Layout from '../../layouts/Layout.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import MountainCard from '../../components/MountainCard.astro';

// Load all mountains
const allFiles = import.meta.glob('../../data/*/*.json', { eager: true });
const allMountains = Object.values(allFiles).map(f => f.default || f);

// Burlington, VT coordinates
const burlingtonLat = 44.4759;
const burlingtonLon = -73.2121;

// Calculate distance
const calculateDistance = (lat, lon) => {
  const R = 3959;
  const dLat = (lat - burlingtonLat) * Math.PI / 180;
  const dLon = (lon - burlingtonLon) * Math.PI / 180;
  const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
    Math.cos(burlingtonLat * Math.PI / 180) * Math.cos(lat * Math.PI / 180) *
    Math.sin(dLon/2) * Math.sin(dLon/2);
  const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
  return R * c;
};

// Filter trails within 100 miles of Burlington
const nearbyHikes = allMountains
  .filter(m => m.lat && m.lon)
  .map(m => ({
    ...m,
    distance: calculateDistance(m.lat, m.lon),
    driveTime: Math.round(calculateDistance(m.lat, m.lon) / 45 * 60)
  }))
  .filter(m => m.distance <= 100)
  .sort((a, b) => a.distance - b.distance);

// Vermont-specific trails
const vermontTrails = nearbyHikes.filter(m => m.state_slug === 'vt' || m.state === 'Vermont').slice(0, 12);
const closestHikes = nearbyHikes.slice(0, 6);
const greenMountainTrails = vermontTrails.filter(m =>
  m.name.toLowerCase().includes('mountain') || m.name.toLowerCase().includes('peak')
).slice(0, 8);

const normalizeState = (s) => {
  if (s === 'nh') return 'new-hampshire';
  if (s === 'me') return 'maine';
  if (s === 'vt') return 'vermont';
  if (s === 'ny') return 'new-york';
  return s;
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the best hike near Burlington, Vermont?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The best hikes near Burlington, VT include Mount Mansfield (Vermont's highest peak), Camel's Hump, Mount Philo State Park, and Stowe Pinnacle. Mount Mansfield offers challenging summit climbs while Mount Philo provides easier family-friendly trails with Lake Champlain views."
      }
    },
    {
      "@type": "Question",
      "name": "How far is Mount Mansfield from Burlington?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mount Mansfield is approximately 35 miles from Burlington, Vermont, making it about a 45-60 minute scenic drive through the Green Mountains. It's Vermont's highest peak at 4,393 feet and offers multiple trail options for all skill levels."
      }
    },
    {
      "@type": "Question",
      "name": "Are there easy hikes near Burlington for families?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Mount Philo State Park (20 minutes from Burlington) offers an easy 1.2-mile hike with stunning Lake Champlain views. Other family-friendly options include Stowe Pinnacle and Snake Mountain, all featuring moderate elevation gain and well-maintained trails perfect for kids."
      }
    }
  ]
};
