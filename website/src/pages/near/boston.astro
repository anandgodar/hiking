/**
 * Best Hikes Near Boston, Massachusetts
 * High-value SEO landing page targeting "hiking near boston" (2,400 searches/month)
 */
import Layout from '../../layouts/Layout.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import MountainCard from '../../components/MountainCard.astro';

// Load all mountains
const allFiles = import.meta.glob('../../data/*/*.json', { eager: true });
const allMountains = Object.values(allFiles)
  .map(f => f.default || f)
  .filter(m => m && m.name && m.slug); // Filter out blog posts

// Boston coordinates
const bostonLat = 42.3601;
const bostonLon = -71.0589;

// Calculate distance from Boston
const calculateDistance = (lat, lon) => {
  const R = 3959; // Earth's radius in miles
  const dLat = (lat - bostonLat) * Math.PI / 180;
  const dLon = (lon - bostonLon) * Math.PI / 180;
  const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
    Math.cos(bostonLat * Math.PI / 180) * Math.cos(lat * Math.PI / 180) *
    Math.sin(dLon/2) * Math.sin(dLon/2);
  const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
  return R * c;
};

// Filter trails within 150 miles of Boston and sort by distance
const nearbyHikes = allMountains
  .filter(m => m.lat && m.lon)
  .map(m => ({
    ...m,
    distance: calculateDistance(m.lat, m.lon),
    driveTime: Math.round(calculateDistance(m.lat, m.lon) / 50 * 60) // Rough estimate: 50mph avg
  }))
  .filter(m => m.distance <= 150)
  .sort((a, b) => a.distance - b.distance);

// Top picks by category
const closestHikes = nearbyHikes.slice(0, 5);
const easyHikes = nearbyHikes.filter(m => {
  const difficulty = m.trails?.[0]?.difficulty || m.trails?.[0]?.stats?.difficulty || '';
  return difficulty.toLowerCase().includes('easy') || difficulty.toLowerCase().includes('beginner');
}).slice(0, 5);
const moderateHikes = nearbyHikes.filter(m => {
  const difficulty = m.trails?.[0]?.difficulty || m.trails?.[0]?.stats?.difficulty || '';
  return difficulty.toLowerCase().includes('moderate');
}).slice(0, 5);
const waterfallHikes = nearbyHikes.filter(m =>
  m.tags?.some(tag => tag.toLowerCase().includes('waterfall'))
).slice(0, 5);

// Normalize state slug
const normalizeState = (s) => {
  if (s === 'nh') return 'new-hampshire';
  if (s === 'me') return 'maine';
  if (s === 'vt') return 'vermont';
  if (s === 'ny') return 'new-york';
  return s;
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the closest hiking trail to Boston?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `The closest major hiking trails to Boston are ${closestHikes[0]?.name} (${Math.round(closestHikes[0]?.distance)} miles, ${closestHikes[0]?.driveTime} minutes) and ${closestHikes[1]?.name} (${Math.round(closestHikes[1]?.distance)} miles, ${closestHikes[1]?.driveTime} minutes). Both offer excellent day hikes within 2 hours of downtown Boston.`
      }
    },
    {
      "@type": "Question",
      "name": "What are the best easy hikes near Boston?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The best easy hiking trails near Boston for beginners and families include Mount Major (${easyHikes.find(h => h.name.includes('Major'))?.driveTime || '90'} minutes from Boston), offering panoramic views with moderate effort, and several waterfall hikes in the White Mountains region."
      }
    },
    {
      "@type": "Question",
      "name": "How far is the White Mountains from Boston?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The White Mountains of New Hampshire are approximately 120-140 miles from Boston, making them a 2-2.5 hour drive. This makes them perfect for day trips or weekend hiking adventures from the Boston area."
      }
    },
    {
      "@type": "Question",
      "name": "Can I hike near Boston in winter?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Many trails near Boston are hikeable year-round. For winter hiking, bring microspikes or crampons, dress in layers, and start with easier trails. Popular winter hikes include Mount Monadnock, Mount Major, and trails in Franconia Notch State Park."
      }
    }
  ]
};

// LocalBusiness Schema for Boston area
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "TouristInformationCenter",
