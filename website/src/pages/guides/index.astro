// Guides listing schema
const guidesSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Ultimate Hiking Guides",
  "description": "Comprehensive hiking guides for trails across America. Regional guides, peak bagging lists, and seasonal advice.",
