export async function getStaticPaths() {
  const allFiles = await Astro.glob('../../data/*/*.json');
  // Normalize slugs: 'nh' -> 'new-hampshire'
  const states = [...new Set(allFiles.map(file => {
      const s = file.default.state_slug;
      return s === 'nh' ? 'new-hampshire' : s;
  }))];

  return states.map(stateSlug => {
      const stateMountains = allFiles
          .map(f => f.default)
          .filter(m => {
              const mSlug = m.state_slug === 'nh' ? 'new-hampshire' : m.state_slug;
              return mSlug === stateSlug;
          })
          .sort((a, b) => b.elevation - a.elevation);

      return {
          params: { state: stateSlug },
          props: { mountains: stateMountains, stateSlug }
      };
  });
}

