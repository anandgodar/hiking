---
// src/components/SocialPulse.astro
interface Props {
  socialPulse: number;
  reviews: Array<{
    author: string;
    rating: number;
    text: string;
    time: string;
  }>;
}

const { socialPulse = 5, reviews = [] } = Astro.props;
const pulsePercentage = socialPulse * 10;
---

<div class="space-y-8 mt-12 mb-16">

  {/* --- PULSE SCORE BLOCK --- */}
  <div class="bg-gradient-to-r from-stone-50 to-orange-50 border border-orange-100 p-6 rounded-2xl">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-2">
        {/* Simple SVG Icon */}
        <svg xmlns="http://www.w3.org/2000/svg" class="text-orange-500 w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 6l-9.5 9.5-5-5L1 18"/><path d="M17 6h6v6"/></svg>
        <h3 class="text-lg font-bold text-stone-900 font-serif">Hiker Pulse</h3>
      </div>
      <span class="text-xs font-mono text-orange-600 bg-orange-100 px-2 py-1 rounded-full">
        UPDATED WEEKLY
      </span>
    </div>

    <div class="flex items-end gap-2 mb-3">
      <span class="text-4xl font-bold text-stone-900">{socialPulse}</span>
      <span class="text-sm text-stone-500 mb-1">/ 10</span>
    </div>

    <div class="w-full bg-stone-200 h-2 rounded-full overflow-hidden">
      <div
        class="bg-orange-500 h-full transition-all duration-1000"
        style={`width: ${pulsePercentage}%`}>
      </div>
    </div>
    <p class="text-xs text-stone-500 mt-2">
      Based on recent crowd reports, parking status, and social activity.
    </p>
  </div>

  {/* --- REVIEWS BLOCK --- */}
  <div>
    <h3 class="text-2xl font-bold text-stone-900 font-serif mb-6 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-stone-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
      Community Reports
    </h3>

    {reviews.length > 0 ? (
      <div class="grid gap-4">
        {reviews.map((review) => (
          <div class="bg-white border border-stone-100 p-5 rounded-xl shadow-sm">
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-stone-100 flex items-center justify-center text-stone-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                </div>
                <span class="font-semibold text-sm text-stone-900">{review.author}</span>
              </div>
              <div class="flex text-yellow-400 text-xs gap-0.5">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill={i < review.rating ? "currentColor" : "none"} stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class={i < review.rating ? "text-yellow-400 fill-current" : "text-stone-200"}><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                ))}
              </div>
            </div>
            <p class="text-stone-600 text-sm leading-relaxed">"{review.text}"</p>
            <div class="mt-3 text-xs text-stone-400 font-mono">{review.time}</div>
          </div>
        ))}
      </div>
    ) : (
      <div class="p-8 text-center bg-stone-50 rounded-xl border border-dashed border-stone-200 text-stone-500">
        No recent reports available.
      </div>
    )}
  </div>
</div>