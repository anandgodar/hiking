---
/**
 * Site Footer Component - PRODUCTION VERSION
 *
 * FIXED: Links now use dynamic state pattern
 * NOTE: For truly dynamic links, this would need to receive available states as props
 */
const currentYear = new Date().getFullYear();

// Available states - this could be passed as props in a production setup
const availableStates = [
  { slug: 'new-hampshire', name: 'New Hampshire' },
  { slug: 'maine', name: 'Maine' },
  { slug: 'vermont', name: 'Vermont' },
  { slug: 'new-york', name: 'New York' },
];

// Default state for category links (first available)
const defaultState = 'new-hampshire';
---
<footer class="bg-stone-900 text-stone-300 pt-20 pb-10 mt-auto border-t border-stone-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 mb-16">

            <!-- BRANDING COLUMN -->
            <div class="col-span-1 md:col-span-4">
                <div class="flex items-center gap-2 mb-6 text-white">
                    <svg class="w-8 h-8 text-emerald-500" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2L2 22h20L12 2zm0 5l6.5 13h-13L12 7z"/>
                    </svg>
                    <span class="font-black tracking-widest uppercase text-xl">Summit Seeker</span>
                </div>
                <p class="text-stone-400 leading-relaxed mb-6 pr-6">
                    The definitive open-source trail database for the Northeast. Built by passionate hikers to help you find your next epic adventure safely and responsibly.
                </p>
                <div class="flex gap-4 text-stone-400">
                    <!-- Twitter/X -->
                    <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="w-10 h-10 flex items-center justify-center rounded-full bg-stone-800 hover:bg-emerald-600 hover:text-white transition-all" aria-label="Twitter">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    </a>
                    <!-- Instagram -->
                    <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="w-10 h-10 flex items-center justify-center rounded-full bg-stone-800 hover:bg-emerald-600 hover:text-white transition-all" aria-label="Instagram">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                    </a>
                    <!-- GitHub -->
                    <a href="https://github.com/anandgodar/hiking" target="_blank" rel="noopener noreferrer" class="w-10 h-10 flex items-center justify-center rounded-full bg-stone-800 hover:bg-emerald-600 hover:text-white transition-all" aria-label="GitHub">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    </a>
                </div>
            </div>

            <!-- EXPLORE LINKS - Dynamic States -->
            <div class="col-span-1 md:col-span-2 md:col-start-6">
                <h3 class="text-white font-bold uppercase tracking-widest text-xs mb-6">Explore Regions</h3>
                <ul class="space-y-4 text-sm font-medium">
                    {availableStates.map(state => (
                        <li>
                            <a href={`/${state.slug}`} class="hover:text-emerald-400 transition-colors flex items-center gap-2">
                                <svg class="w-3 h-3 text-emerald-500/50" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M10 17l5-5-5-5v10z"/>
                                </svg>
                                {state.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- DISCOVER LINKS - Use default state for category links -->
            <div class="col-span-1 md:col-span-2">
                <h3 class="text-white font-bold uppercase tracking-widest text-xs mb-6">Discover Trending</h3>
                <ul class="space-y-4 text-sm font-medium">
                    <li>
                        <a href={`/${defaultState}/hikes/waterfall`} class="hover:text-emerald-400 transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2c-5.33 4.55-8 8.48-8 11.8 0 4.98 3.8 8.2 8 8.2s8-3.22 8-8.2c0-3.32-2.67-7.25-8-11.8z"/>
                            </svg>
                            Waterfalls
                        </a>
                    </li>
                    <li>
                        <a href={`/${defaultState}/hikes/4000-footer`} class="hover:text-emerald-400 transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4 text-emerald-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M14 6l-3.75 5 2.85 3.8-1.6 1.2C9.81 13.75 7 10 7 10l-6 8h22L14 6z"/>
                            </svg>
                            4000 Footers
                        </a>
                    </li>
                    <li>
                        <a href={`/${defaultState}/hikes/dog-friendly`} class="hover:text-emerald-400 transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M4.5 12c-.83 0-1.5-.67-1.5-1.5S3.67 9 4.5 9 6 9.67 6 10.5 5.33 12 4.5 12zm3-4C6.67 8 6 7.33 6 6.5S6.67 5 7.5 5 9 5.67 9 6.5 8.33 8 7.5 8zm5-1c-.83 0-1.5-.67-1.5-1.5S11.67 4 12.5 4s1.5.67 1.5 1.5S13.33 7 12.5 7zm4 1c-.83 0-1.5-.67-1.5-1.5S15.67 5 16.5 5s1.5.67 1.5 1.5S17.33 8 16.5 8zm3 4c-.83 0-1.5-.67-1.5-1.5S18.67 9 19.5 9s1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                            </svg>
                            Dog Friendly
                        </a>
                    </li>
                    <li>
                        <a href={`/${defaultState}/hikes/best-hike`} class="hover:text-emerald-400 transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                            </svg>
                            Best Hikes
                        </a>
                    </li>
                </ul>
            </div>

            <!-- LEGAL & RESOURCES -->
            <div class="col-span-1 md:col-span-2">
                <h3 class="text-white font-bold uppercase tracking-widest text-xs mb-6">Resources</h3>
                <ul class="space-y-4 text-sm font-medium">
                    <li><a href="/privacy" class="hover:text-emerald-400 transition-colors">Privacy Policy</a></li>
                    <li><a href="/terms" class="hover:text-emerald-400 transition-colors">Terms of Service</a></li>
                    <li><a href="/sitemap.xml" class="hover:text-emerald-400 transition-colors">Sitemap</a></li>
                    <li><a href="mailto:hello@summitseeker.io" class="hover:text-emerald-400 transition-colors">Contact Us</a></li>
                </ul>
            </div>
        </div>

        <!-- BOTTOM BAR -->
        <div class="border-t border-stone-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-stone-500 font-medium uppercase tracking-wider">
            <p>&copy; {currentYear} Summit Seeker. Built with Astro.</p>
            <div class="flex gap-6">
                <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
                <a href="/terms" class="hover:text-white transition-colors">Terms</a>
                <a href="/sitemap.xml" class="hover:text-white transition-colors">Sitemap</a>
            </div>
        </div>
    </div>
</footer>