---
/**
 * Safety Section Component - Phase 2 Content
 * Location: src/components/SafetySection.astro
 */

interface SafetyInfo {
  current_hazards?: string[];
  essential_gear?: Array<{ item: string; critical: boolean }>;
  emergency_contacts?: {
    ranger_station?: string;
    search_rescue?: string;
    weather_line?: string;
  };
  turn_around_time?: string;
}

interface Props {
  safety?: SafetyInfo;
  mountainName?: string;
  elevation?: number;
}

const { safety, mountainName = 'this peak', elevation = 4000 } = Astro.props;

const month = new Date().getMonth();
const isWinter = month >= 11 || month <= 2;
const isSummer = month >= 5 && month <= 8;

const defaultSafety: SafetyInfo = {
  current_hazards: elevation >= 4000 
    ? isWinter 
      ? ["Extreme cold", "High winds", "Ice on trails", "Short daylight", "Avalanche risk"]
      : isSummer
        ? ["Afternoon thunderstorms", "Dehydration risk", "UV exposure above treeline"]
        : ["Rapidly changing weather", "Ice possible on summit", "Wet leaves on trails"]
    : isWinter
      ? ["Ice on trails", "Short daylight hours", "Cold temperatures"]
      : ["Normal hiking conditions", "Check weather before departure"],
  essential_gear: [
    { item: "Map & compass/GPS", critical: true },
    { item: "Extra water (2L minimum)", critical: true },
    { item: "Headlamp with batteries", critical: true },
    { item: "First aid kit", critical: true },
    { item: "Extra food", critical: true },
    { item: "Rain/wind layer", critical: true },
    { item: "Emergency shelter/bivy", critical: false },
    { item: "Sun protection", critical: false },
    { item: "Trekking poles", critical: false },
    { item: "Multi-tool/knife", critical: false }
  ],
  emergency_contacts: {
    ranger_station: "603-536-6100",
    search_rescue: "911",
    weather_line: "603-356-2137"
  },
  turn_around_time: elevation >= 4000 ? "1:00 PM (2:00 PM summer)" : "3:00 PM"
};

const displaySafety = {
  ...defaultSafety,
  ...safety,
  essential_gear: safety?.essential_gear || defaultSafety.essential_gear,
  emergency_contacts: { ...defaultSafety.emergency_contacts, ...safety?.emergency_contacts }
};
---

<section class="safety-section py-8" id="safety">
  <h2 class="text-2xl font-bold text-stone-900 mb-6 flex items-center gap-2">
    <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    Safety Information
  </h2>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="bg-amber-50 border border-amber-200 rounded-xl p-5">
      <h3 class="font-bold text-amber-800 mb-3 flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Current Hazards
      </h3>
      <ul class="space-y-2">
        {displaySafety.current_hazards?.map(hazard => (
          <li class="flex items-start gap-2 text-sm text-amber-900">
            <svg class="w-4 h-4 text-amber-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            {hazard}
          </li>
        ))}
      </ul>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-xl p-5">
      <h3 class="font-bold text-blue-800 mb-3 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Turn-Around Time
      </h3>
      <p class="text-3xl font-bold text-blue-900 mb-2">{displaySafety.turn_around_time}</p>
      <p class="text-sm text-blue-700">
        Plan to reach the summit by this time to allow safe descent before dark.
      </p>
    </div>
  </div>

  <div class="mt-6 bg-white border border-stone-200 rounded-xl p-5">
    <h3 class="font-bold text-stone-900 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
      </svg>
      Essential Gear Checklist
    </h3>
    <div class="grid sm:grid-cols-2 gap-3">
      {displaySafety.essential_gear?.map(({ item, critical }) => (
        <label class="flex items-center gap-3 text-sm cursor-pointer hover:bg-stone-50 p-2 rounded-lg transition-colors">
          <input 
            type="checkbox" 
            class="rounded border-stone-300 text-emerald-600 focus:ring-emerald-500"
          />
          <span class={critical ? 'text-stone-900 font-medium' : 'text-stone-600'}>
            {item}
            {critical && <span class="text-red-500 ml-1">*</span>}
          </span>
        </label>
      ))}
    </div>
    <p class="mt-3 text-xs text-stone-500">
      <span class="text-red-500">*</span> Critical items - do not hike without these
    </p>
  </div>

  <div class="mt-6 bg-red-50 border border-red-200 rounded-xl p-5">
    <h3 class="font-bold text-red-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      Emergency Contacts
    </h3>
    <div class="grid sm:grid-cols-3 gap-4">
      <div>
        <p class="text-xs text-red-700 uppercase tracking-wide mb-1">Emergency</p>
        <a href="tel:911" class="text-lg font-bold text-red-900 hover:underline">911</a>
      </div>
      <div>
        <p class="text-xs text-red-700 uppercase tracking-wide mb-1">NH Fish & Game</p>
        <a href={`tel:${displaySafety.emergency_contacts?.ranger_station}`} class="text-lg font-bold text-red-900 hover:underline">
          {displaySafety.emergency_contacts?.ranger_station}
        </a>
      </div>
      <div>
        <p class="text-xs text-red-700 uppercase tracking-wide mb-1">Mt Washington Weather</p>
        <a href={`tel:${displaySafety.emergency_contacts?.weather_line}`} class="text-lg font-bold text-red-900 hover:underline">
          {displaySafety.emergency_contacts?.weather_line}
        </a>
      </div>
    </div>
  </div>
</section>
