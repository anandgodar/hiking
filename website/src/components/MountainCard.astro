---
const { mountain, showState = false } = Astro.props;

// Safety Checks
const mainTrail = mountain.trails?.[0] || mountain.trails_config?.[0] || {};
const stats = mainTrail.stats || {};
const image = mountain.mountain_hero || mountain.image || "https://images.unsplash.com/photo-1589656966895-2f33e7653819?auto=format&fit=crop&q=80&w=800";

// Helper for Difficulty Color
const getDiffColor = (d) => {
    if (d === 'Hard' || d === 'Expert') return 'text-orange-600 bg-orange-50 border-orange-100';
    if (d === 'Easy') return 'text-emerald-600 bg-emerald-50 border-emerald-100';
    return 'text-yellow-600 bg-yellow-50 border-yellow-100';
};

// Get difficulty from stats or directly from trail
const difficulty = stats.difficulty || mainTrail.difficulty || 'Moderate';
---

<a href={`/${mountain.state_slug}/${mountain.slug}`} class="group flex flex-col bg-white border border-stone-200 rounded-2xl overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full">
    <!-- IMAGE HEADER -->
    <div class="h-48 relative overflow-hidden">
        <img
            src={image}
            alt={mountain.name}
            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60"></div>

        <!-- Elevation Badge -->
        <div class="absolute top-3 right-3 bg-stone-900/90 backdrop-blur text-white text-[10px] font-bold px-2 py-1 rounded border border-white/10">
            {mountain.elevation?.toLocaleString()} ft
        </div>

        <!-- Optional State Badge -->
        {showState && (
            <div class="absolute top-3 left-3 bg-white/20 backdrop-blur text-white text-[10px] font-bold px-2 py-1 rounded border border-white/20 uppercase">
                {mountain.state_slug?.replace('-', ' ')}
            </div>
        )}

        <!-- Bottom Title Overlay -->
        <div class="absolute bottom-3 left-4 text-white">
            <h3 class="font-serif text-xl font-bold leading-none mb-0.5 group-hover:text-emerald-300 transition-colors">
                {mountain.name}
            </h3>
        </div>
    </div>

    <!-- CONTENT BODY -->
    <div class="p-4 flex-grow flex flex-col justify-between">
        <!-- Stats Row - Using SVG icons instead of emojis -->
        <div class="flex items-center gap-4 text-xs text-stone-500 mb-4 border-b border-stone-100 pb-3">
            <!-- Distance -->
            <div class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                <span>{stats.distance || mainTrail.distance_miles || '-'} mi</span>
            </div>
            <!-- Time -->
            <div class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>{stats.time || '-'} hrs</span>
            </div>
            <!-- Elevation Gain -->
            <div class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-stone-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M14 6l-3.75 5 2.85 3.8-1.6 1.2C9.81 13.75 7 10 7 10l-6 8h22L14 6z"/>
                </svg>
                <span>{stats.gain || '-'} ft</span>
            </div>
        </div>

        <!-- Footer Row -->
        <div class="flex justify-between items-center mt-auto">
            <span class={`text-[10px] font-bold px-2 py-1 rounded border uppercase tracking-wide ${getDiffColor(difficulty)}`}>
                {difficulty}
            </span>
            <span class="text-stone-400 group-hover:text-emerald-600 transition-colors flex items-center gap-1">
                View
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </span>
        </div>
    </div>
</a>