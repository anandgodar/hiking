---
/**
 * Blog Card Component - For blog listing pages
 * Location: src/components/BlogCard.astro
 */

interface Props {
  post: {
    slug: string;
    title: string;
    excerpt: string;
    featured_image?: string;
    category?: string;
    date: string;
    reading_time?: string;
    tags?: string[];
    featured?: boolean;
  };
  variant?: 'default' | 'featured' | 'compact';
}

const { post, variant = 'default' } = Astro.props;

const formattedDate = new Date(post.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const categoryColors = {
  'Safety & Preparation': 'bg-red-50 text-red-700 border-red-200',
  'Trail Data & Technology': 'bg-blue-50 text-blue-700 border-blue-200',
  'Gear & Equipment': 'bg-amber-50 text-amber-700 border-amber-200',
  'Regional Guides': 'bg-emerald-50 text-emerald-700 border-emerald-200',
  'default': 'bg-stone-50 text-stone-700 border-stone-200'
};

const categoryColor = categoryColors[post.category] || categoryColors['default'];
---

{variant === 'featured' && (
  <a
    href={`/blog/${post.slug}`}
    class="group relative block bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300"
  >
    <div class="grid md:grid-cols-2">
      <div class="aspect-video md:aspect-auto md:h-full overflow-hidden">
        <img
          src={post.featured_image || 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800'}
          alt={post.title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
      </div>
      <div class="p-6 md:p-8 flex flex-col justify-center">
        <div class="flex items-center gap-3 mb-4">
          {post.category && (
            <span class={`text-xs font-bold px-2 py-1 rounded border ${categoryColor}`}>
              {post.category}
            </span>
          )}
          {post.featured && (
            <span class="text-xs font-bold px-2 py-1 rounded bg-emerald-600 text-white">
              Featured
            </span>
          )}
        </div>
        <h3 class="text-2xl font-bold text-stone-900 group-hover:text-emerald-600 transition-colors mb-3">
          {post.title}
        </h3>
        <p class="text-stone-600 mb-4 line-clamp-3">
          {post.excerpt}
        </p>
        <div class="flex items-center gap-4 text-sm text-stone-500">
          <span>{formattedDate}</span>
          {post.reading_time && (
            <>
              <span class="w-1 h-1 bg-stone-300 rounded-full"></span>
              <span>{post.reading_time}</span>
            </>
          )}
        </div>
      </div>
    </div>
  </a>
)}

{variant === 'default' && (
  <a
    href={`/blog/${post.slug}`}
    class="group flex flex-col bg-white border border-stone-200 rounded-xl overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
  >
    <div class="aspect-video overflow-hidden">
      <img
        src={post.featured_image || 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800'}
        alt={post.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    </div>
    <div class="p-5 flex-1 flex flex-col">
      <div class="flex items-center gap-2 mb-3">
        {post.category && (
          <span class={`text-[10px] font-bold px-2 py-0.5 rounded border uppercase ${categoryColor}`}>
            {post.category}
          </span>
        )}
        {post.reading_time && (
          <span class="text-xs text-stone-500">{post.reading_time}</span>
        )}
      </div>
      <h3 class="font-bold text-lg text-stone-900 group-hover:text-emerald-600 transition-colors mb-2 line-clamp-2">
        {post.title}
      </h3>
      <p class="text-sm text-stone-600 mb-4 line-clamp-2 flex-1">
        {post.excerpt}
      </p>
      <div class="flex items-center justify-between text-sm">
        <span class="text-stone-500">{formattedDate}</span>
        <span class="text-emerald-600 font-medium group-hover:translate-x-1 transition-transform flex items-center gap-1">
          Read more
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
  </a>
)}

{variant === 'compact' && (
  <a
    href={`/blog/${post.slug}`}
    class="group flex items-center gap-4 p-3 bg-white border border-stone-200 rounded-lg hover:border-emerald-300 hover:shadow-md transition-all"
  >
    <img
      src={post.featured_image || 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=200'}
      alt={post.title}
      class="w-20 h-20 object-cover rounded-lg flex-shrink-0"
      loading="lazy"
    />
    <div class="flex-1 min-w-0">
      <h4 class="font-medium text-stone-900 group-hover:text-emerald-600 transition-colors line-clamp-2">
        {post.title}
      </h4>
      <div class="flex items-center gap-2 mt-1 text-xs text-stone-500">
        <span>{formattedDate}</span>
        {post.reading_time && (
          <>
            <span class="w-1 h-1 bg-stone-300 rounded-full"></span>
            <span>{post.reading_time}</span>
          </>
        )}
      </div>
    </div>
    <svg class="w-5 h-5 text-stone-300 group-hover:text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </a>
)}
