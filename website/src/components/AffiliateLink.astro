---
/**
 * Affiliate Link Component - Monetization support
 * Location: src/components/AffiliateLink.astro
 *
 * Reusable component for affiliate product recommendations
 * Supports various affiliate programs: REI, Backcountry, Amazon, etc.
 */

interface Props {
  product: {
    name: string;
    brand?: string;
    price?: string;
    originalPrice?: string;
    image?: string;
    url: string;
    description?: string;
    rating?: number;
    reviewCount?: number;
    badge?: string; // e.g., "Best Value", "Editor's Pick"
  };
  affiliate?: 'rei' | 'backcountry' | 'amazon' | 'patagonia' | 'osprey' | 'generic';
  variant?: 'card' | 'inline' | 'compact';
}

const { product, affiliate = 'generic', variant = 'card' } = Astro.props;

// Add affiliate disclosure tracking parameter
const affiliateUrl = product.url.includes('?')
  ? `${product.url}&ref=summitseeker`
  : `${product.url}?ref=summitseeker`;

const affiliateLogos = {
  rei: 'REI Co-op',
  backcountry: 'Backcountry',
  amazon: 'Amazon',
  patagonia: 'Patagonia',
  osprey: 'Osprey',
  generic: 'Shop'
};

// Generate rating stars
const fullStars = product.rating ? Math.floor(product.rating) : 0;
const hasHalfStar = product.rating ? product.rating % 1 >= 0.5 : false;
---

{variant === 'card' && (
  <div class="affiliate-card bg-white border border-stone-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
    {product.badge && (
      <div class="bg-emerald-600 text-white text-xs font-bold px-3 py-1 text-center">
        {product.badge}
      </div>
    )}

    <div class="p-4">
      {product.image && (
        <div class="aspect-square bg-stone-50 rounded-lg mb-4 overflow-hidden">
          <img
            src={product.image}
            alt={product.name}
            class="w-full h-full object-contain"
            loading="lazy"
          />
        </div>
      )}

      <div class="space-y-2">
        {product.brand && (
          <p class="text-xs text-stone-500 font-medium uppercase tracking-wide">{product.brand}</p>
        )}

        <h4 class="font-bold text-stone-900 leading-tight">{product.name}</h4>

        {product.description && (
          <p class="text-sm text-stone-600 line-clamp-2">{product.description}</p>
        )}

        {product.rating && (
          <div class="flex items-center gap-1">
            <div class="flex text-amber-400">
              {Array(fullStars).fill(null).map(() => (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              ))}
              {hasHalfStar && (
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" opacity="0.5"/>
                </svg>
              )}
            </div>
            {product.reviewCount && (
              <span class="text-xs text-stone-500">({product.reviewCount})</span>
            )}
          </div>
        )}

        <div class="flex items-baseline gap-2">
          {product.price && (
            <span class="text-lg font-bold text-stone-900">{product.price}</span>
          )}
          {product.originalPrice && (
            <span class="text-sm text-stone-400 line-through">{product.originalPrice}</span>
          )}
        </div>
      </div>

      <a
        href={affiliateUrl}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="mt-4 w-full flex items-center justify-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-2.5 px-4 rounded-lg transition-colors"
      >
        <span>View at {affiliateLogos[affiliate]}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    </div>

    <div class="bg-stone-50 px-4 py-2 text-[10px] text-stone-400 text-center border-t border-stone-100">
      Affiliate link - we may earn a commission
    </div>
  </div>
)}

{variant === 'inline' && (
  <a
    href={affiliateUrl}
    target="_blank"
    rel="noopener noreferrer sponsored"
    class="inline-flex items-center gap-1 text-emerald-600 hover:text-emerald-700 font-medium underline decoration-emerald-300 hover:decoration-emerald-500 transition-colors"
  >
    {product.name}
    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
    </svg>
  </a>
)}

{variant === 'compact' && (
  <a
    href={affiliateUrl}
    target="_blank"
    rel="noopener noreferrer sponsored"
    class="flex items-center gap-3 p-3 bg-stone-50 hover:bg-stone-100 rounded-lg border border-stone-200 transition-colors group"
  >
    {product.image && (
      <img
        src={product.image}
        alt={product.name}
        class="w-12 h-12 object-contain rounded"
        loading="lazy"
      />
    )}
    <div class="flex-1 min-w-0">
      <p class="font-medium text-stone-900 truncate group-hover:text-emerald-600 transition-colors">{product.name}</p>
      {product.price && (
        <p class="text-sm text-stone-600">{product.price}</p>
      )}
    </div>
    <svg class="w-5 h-5 text-stone-400 group-hover:text-emerald-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </a>
)}
